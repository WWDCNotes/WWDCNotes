{"kind":"article","identifier":{"url":"doc:\/\/WWDCNotes\/documentation\/WWDCNotes\/WWDC24-10151-Create-custom-visual-effects-with-SwiftUI","interfaceLanguage":"swift"},"sections":[],"schemaVersion":{"patch":0,"minor":3,"major":0},"sampleCodeDownload":{"kind":"sampleDownload","action":{"identifier":"https:\/\/developer.apple.com\/wwdc24\/10151","overridingTitle":"Watch Video","isActive":true,"type":"reference"}},"primaryContentSections":[{"content":[{"anchor":"overview","text":"Overview","level":2,"type":"heading"},{"inlineContent":[{"text":"Philip Davis and Rob Bohnke","type":"text"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"Small details make a big difference, and visual effects can enhance perception and functionality. Experiment to find the right effect."}],"type":"paragraph"},{"inlineContent":[{"text":"Effects can:","type":"text"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"Show feature is working","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Add personality","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Focus attention","type":"text"}]}]}],"type":"unorderedList"},{"inlineContent":[{"text":"Covered in the talk:","type":"text"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"Scroll effects","type":"text"}]}]},{"content":[{"inlineContent":[{"type":"text","text":"Color treatments"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"View transitions"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Text transitions"}]}]},{"content":[{"inlineContent":[{"type":"text","text":"Metal shaders"}],"type":"paragraph"}]}],"type":"orderedList"},{"anchor":"1-Scroll-view-effects","text":"1. Scroll view effects","level":2,"type":"heading"},{"inlineContent":[{"type":"text","text":"Basic enhancement: enable scroll paging with "},{"type":"codeVoice","code":"scrollTargetBehavior(.paging)"}],"type":"paragraph"},{"inlineContent":[{"type":"codeVoice","code":".scrollTransition"},{"type":"text","text":" modifier changes collection of elements to something custom"},{"type":"text","text":" "},{"type":"text","text":"Exposes: content to transition and its scroll phase"},{"type":"text","text":" "},{"type":"text","text":"Use "},{"type":"codeVoice","code":"phase.value"},{"type":"text","text":" to check how far off screen view is"},{"type":"text","text":" "},{"type":"codeVoice","code":"phase.identity"},{"type":"text","text":" will be true when content is fully on screen"}],"type":"paragraph"},{"inlineContent":[{"text":"Use ","type":"text"},{"type":"codeVoice","code":".visualEffect"},{"text":" to e.g. change view hue rotation based on view’s position in scroll view","type":"text"},{"text":" ","type":"text"},{"text":"Exposes ","type":"text"},{"type":"codeVoice","code":"contentPlaceholder"},{"text":" (similar to content in scrollTransition), and ","type":"text"},{"code":"proxy","type":"codeVoice"},{"text":" (gives geometry values of view)","type":"text"},{"text":" ","type":"text"},{"text":"You can modify scale, skew, rotation, offset, brightness, and color properties of views, for example, to create your own custom scroll view effect","type":"text"}],"type":"paragraph"},{"anchor":"2-Color-effects","text":"2. Color effects","level":2,"type":"heading"},{"inlineContent":[{"type":"text","text":"Color can give app identity, focus attention, or clarify intent"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"Existing support in SwiftUI:"}],"type":"paragraph"},{"items":[{"content":[{"inlineContent":[{"type":"text","text":"Gradient types: linear, radial, angular"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Color controls: brightness, hue rotation, saturation","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Blend modes","type":"text"}]}]}],"type":"unorderedList"},{"inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"New"}]},{"type":"text","text":": mesh gradients"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Made from grid of points"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Each point has an associated color"}]}]},{"content":[{"inlineContent":[{"text":"SwiftUI interpolates colors between points to create a color fill","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Points can be moved to modify color transitions"}]}]}],"type":"unorderedList"},{"code":["MeshGradient(","    width: 3,","    height: 3,","    points: [","        [0.0, 0.0], [0.5, 0.0], [1.0, 0.0],","        [0.0, 0.5], [0.9, 0.3], [1.0, 0.5],","        [0.0, 1.0], [0.5, 1.0], [1.0, 1.0]","    ],","    colors: [","        .black,.black,.black,","        .blue, .blue, .blue,","        .green, .green, .green","    ]",")"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"type":"text","text":"Possible uses"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"decorative"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"match imagery"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"signal change with mesh gradient animation","type":"text"}]}]}],"type":"unorderedList"},{"inlineContent":[{"type":"text","text":"Play with position of control points, grid size, and color palette"}],"type":"paragraph"},{"anchor":"3-View-transitions","text":"3. View transitions","level":2,"type":"heading"},{"inlineContent":[{"type":"text","text":"Add or remove views"},{"type":"text","text":" "},{"type":"text","text":"Provide context to what changed and why"}],"type":"paragraph"},{"inlineContent":[{"text":"Standard transitions like scale and opacity","type":"text"},{"text":" ","type":"text"},{"text":"Combine transitions","type":"text"},{"text":" ","type":"text"},{"text":"Create entirely custom transitions","type":"text"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"Create a new struct conforming to ","type":"text"},{"code":"Transition","type":"codeVoice"},{"text":" protocol","type":"text"}]}]},{"content":[{"inlineContent":[{"type":"codeVoice","code":"body"},{"type":"text","text":" function takes "},{"type":"codeVoice","code":"content"},{"type":"text","text":" and "},{"type":"codeVoice","code":"phase"},{"type":"text","text":" parameters, similar to scroll views"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Add view modifiers like ","type":"text"},{"type":"codeVoice","code":"scaleEffect"},{"text":", ","type":"text"},{"type":"codeVoice","code":"opacity"},{"text":", ","type":"text"},{"type":"codeVoice","code":"blur"},{"text":", ","type":"text"},{"type":"codeVoice","code":"rotationEffect"},{"text":",","type":"text"}]}]},{"content":[{"inlineContent":[{"text":"Check ","type":"text"},{"code":"phase.isIdentity","type":"codeVoice"},{"text":", ","type":"text"},{"code":"phase.willAppear","type":"codeVoice"},{"text":", and ","type":"text"},{"code":"phase.willDisappear","type":"codeVoice"},{"text":" to adjust modifier effects","type":"text"}],"type":"paragraph"}]}],"type":"orderedList"},{"inlineContent":[{"type":"text","text":"Use transitions to:"}],"type":"paragraph"},{"items":[{"content":[{"inlineContent":[{"text":"Ease an element into view as it loads","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"Introduce key information","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Make graphical element feel dynamic","type":"text"}]}]}],"type":"unorderedList"},{"anchor":"4-Text-transitions","text":"4. Text transitions","level":2,"type":"heading"},{"inlineContent":[{"type":"text","text":"Use text transitions to animate text by component, like line, word, and glyph"},{"type":"text","text":" "},{"type":"codeVoice","code":"TextRenderer"},{"type":"text","text":" new protocol to customize how text is drawn for entire view tree"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"Default rendering behavior:"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Declare a struct conforming to "},{"type":"codeVoice","code":"TextRenderer"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Implement ","type":"text"},{"code":"draw(layout: in:)","type":"codeVoice"}]},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"code":"Text.Layout","type":"codeVoice"},{"text":": access individual components of text","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"code":"GraphicsContext","type":"codeVoice"},{"type":"text","text":" is the same as in "},{"code":"Canvas","type":"codeVoice"}]},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"type":"text","text":"See "},{"inlineContent":[{"type":"text","text":"Add rich graphics to your SwiftUI app"}],"type":"strong"}],"type":"paragraph"}]}]}]}]}]},{"content":[{"inlineContent":[{"text":"For default rendering, iterate over lines and draw in context","type":"text"}],"type":"paragraph"}]}],"type":"orderedList"},{"inlineContent":[{"text":"Example custom rendering","type":"text"}],"type":"paragraph"},{"items":[{"content":[{"inlineContent":[{"type":"text","text":"To drive a custom transition, declare properties such as: "},{"type":"codeVoice","code":"elapsedTime"},{"type":"text","text":", "},{"type":"codeVoice","code":"elementDuration"},{"type":"text","text":", "},{"type":"codeVoice","code":"totalDuration"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Conform to "},{"type":"codeVoice","code":"Animatable"},{"type":"text","text":" protocol, and forward "},{"type":"codeVoice","code":"animatableData"},{"type":"text","text":" property to "},{"type":"codeVoice","code":"elapsedTime"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Distribute available time among all text layout elements","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"For each text line, update "},{"type":"codeVoice","code":"GraphicsContext"},{"type":"text","text":" properties (like opacity, blur, translation) based on line properties such as "},{"type":"codeVoice","code":"typographicBounds"}]}]}],"type":"orderedList"},{"inlineContent":[{"type":"text","text":"To focus on specific elements in text, use "},{"code":"TextAttribute","type":"codeVoice"},{"type":"text","text":" "},{"type":"text","text":"Conform struct to "},{"code":"TextAttribute","type":"codeVoice"},{"type":"text","text":" protocol to pass data from text to "},{"code":"TextRenderer","type":"codeVoice"},{"type":"text","text":" "},{"type":"text","text":"Use "},{"code":"customAttribute","type":"codeVoice"},{"type":"text","text":" modifier with your struct to mark a SwiftUI "},{"code":"Text","type":"codeVoice"},{"type":"text","text":" element"}],"type":"paragraph"},{"anchor":"5-Metal-shaders","text":"5. Metal shaders","level":2,"type":"heading"},{"inlineContent":[{"type":"text","text":"Most fine-grained control. Small programs calculating effects directly on device GPU."},{"type":"text","text":" "},{"type":"text","text":"Used internally to implement many SwiftUI features, including mesh gradients"},{"type":"text","text":" "},{"type":"text","text":"Pass colors, numbers, and images to shaders to modify the effect"},{"type":"text","text":" "},{"type":"text","text":"Written in Metal, not Swift"}],"type":"paragraph"},{"inlineContent":[{"text":"Uses of shaders in SwiftUI:","type":"text"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Custom fills"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Color effects"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Distortion effects","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Layer effects","type":"text"}]}]}],"type":"unorderedList"},{"anchor":"Conclusion","text":"Conclusion","level":2,"type":"heading"},{"inlineContent":[{"type":"text","text":"Try experimenting with:"}],"type":"paragraph"},{"items":[{"content":[{"inlineContent":[{"type":"text","text":"Custom scroll effects"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"Mesh gradients","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"Custom transitions"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Text renderer"}]}]},{"content":[{"inlineContent":[{"text":"Metal shaders","type":"text"}],"type":"paragraph"}]}],"type":"unorderedList"},{"anchor":"Written-By","text":"Written By","level":2,"type":"heading"},{"numberOfColumns":5,"type":"row","columns":[{"size":1,"content":[{"type":"paragraph","inlineContent":[{"type":"image","identifier":"coughski"}]}]},{"size":4,"content":[{"anchor":"Kuba-Szulaczkowski","text":"Kuba Szulaczkowski","level":3,"type":"heading"},{"inlineContent":[{"isActive":true,"overridingTitle":"Contributed Notes","identifier":"doc:\/\/WWDCNotes\/documentation\/WWDCNotes\/coughski","type":"reference","overridingTitleInlineContent":[{"text":"Contributed Notes","type":"text"}]},{"text":" ","type":"text"},{"text":"|","type":"text"},{"text":" ","type":"text"},{"isActive":true,"identifier":"https:\/\/github.com\/coughski","type":"reference"},{"text":" ","type":"text"},{"text":"|","type":"text"},{"text":" ","type":"text"},{"isActive":true,"identifier":"https:\/\/","type":"reference"},{"text":" ","type":"text"},{"text":"|","type":"text"},{"text":" ","type":"text"},{"isActive":true,"identifier":"https:\/\/x.com\/coughski","type":"reference"}],"type":"paragraph"}]}]},{"inlineContent":[{"text":"Missing anything?