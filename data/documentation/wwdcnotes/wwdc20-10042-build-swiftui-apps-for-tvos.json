{"type":"codeListing","syntax":"swift","code":["AlbumView()","  .contextMenu {","    Button(\"Add to Favorites\", action: addAlbumToFavorites)","    Button(\"View Artist\", action: viewArtistPage)","    Button(\"Discover Similar Albums\", action: viewSimilarAlbums)","  }"]},{"type":"heading","text":"Focus","level":2,"anchor":"Focus"},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"primary way to interact with a TV app","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"incredibly important to be able to focus on views and determine if a view is focused"}]}]},{"content":[{"inlineContent":[{"type":"text","text":"use the "},{"type":"reference","isActive":true,"identifier":"https:\/\/developer.apple.com\/documentation\/swiftui\/link\/focusable(_:onfocuschange:)"},{"text":" modifier to make a view focusable","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"not meant for intrinsically focusable views (buttons, lists, ..)","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"use the modifier ","type":"text"},{"code":"onFocusChange","type":"codeVoice"},{"text":" parameter to configure your state","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"new "},{"type":"reference","isActive":true,"identifier":"https:\/\/developer.apple.com\/documentation\/swiftui\/environmentvalues\/isfocused"},{"type":"text","text":" Environment variable"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"lets you check whether or not a view is in focus, even if the view itself is not focusable","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"codeVoice","code":"true"},{"text":" if the nearest focusable ancestor of your view is focused","type":"text"}]}]}],"type":"unorderedList"}]}]},{"type":"heading","text":"Default focus","level":2,"anchor":"Default-focus"},