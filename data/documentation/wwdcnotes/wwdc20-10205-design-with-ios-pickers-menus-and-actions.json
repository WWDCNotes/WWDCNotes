{"hierarchy":{"paths":[["doc:\/\/WWDCNotes\/documentation\/WWDCNotes","doc:\/\/WWDCNotes\/documentation\/WWDCNotes\/WWDC20"]]},"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/wwdcnotes\/wwdc20-10205-design-with-ios-pickers-menus-and-actions"]}],"sections":[],"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/WWDCNotes\/documentation\/WWDCNotes\/WWDC20-10205-Design-with-iOS-pickers-menus-and-actions"},"metadata":{"title":"Design with iOS pickers, menus and actions","modules":[{"name":"WWDC Notes"}],"role":"sampleCode","roleHeading":"WWDC20"},"primaryContentSections":[{"kind":"content","content":[{"type":"heading","text":"Menus","level":2,"anchor":"Menus"},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"In iOS 14, you can show a Menu from any button","type":"text"}]}]},{"content":[{"inlineContent":[{"type":"text","text":"Menus in iOS consist of:"}],"type":"paragraph"},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Label-icon actions"}]}]},{"content":[{"inlineContent":[{"type":"text","text":"A title"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Separators"}]}]}]}]}]},{"type":"paragraph","inlineContent":[{"identifier":"WWDC20-10205-menu_constructs","type":"image"}]},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"type":"text","text":"Do not add a Cancel button inside a menu, simply tapping outside the menu does the same effect"}],"type":"paragraph"}]}]},{"type":"paragraph","inlineContent":[{"type":"image","identifier":"WWDC20-10205-no_menu_cancel"}]},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"The menu adheres to the system accessibility settings by default","type":"text"}]}]}]},{"type":"heading","text":"Menus use cases:","level":3,"anchor":"Menus-use-cases"},{"type":"orderedList","items":[{"content":[{"inlineContent":[{"text":"Disambiguation: when you want to clear out what is the user’s intent for this action","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Navigation: giving extra options to navigate backward or forward"}]}]},{"content":[{"inlineContent":[{"text":"Selection: to select one option of many for actions like Sort and Filter","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"Secondary options: to show non-primary actions that are not important enough to be prominently displayed, but still should have easy access"}],"type":"paragraph"}]}]},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"Do not hide all actions under one menu, instead, carefully promote your primary actions and group together secondary ones, if needed:","type":"text"}]}]}]},{"type":"paragraph","inlineContent":[{"text":"| ","type":"text"},{"type":"image","identifier":"WWDC20-10205-grouping_all_actions"},{"text":" | ","type":"text"},{"type":"image","identifier":"WWDC20-10205-not_grouping_all_actions"},{"text":" |","type":"text"}]},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"text":"You can make your buttons do one thing on tap, and another (showing a menu) on long press","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"If there is a destructive action in your menu, make sure to always use an action sheet on iPhones, and pop-overs on iPad, to take the user confirmation before doing the action:","type":"text"},{"text":" ","type":"text"},{"identifier":"WWDC20-10205-destructive_confirmation","type":"image"}],"type":"paragraph"}]}]},{"type":"heading","text":"`UIDatePicker`","level":2,"anchor":"UIDatePicker"},{"type":"paragraph","inlineContent":[{"identifier":"WWDC20-10205-uidatepicker","type":"image"}]},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"text":"New ","type":"text"},{"type":"codeVoice","code":"UIDatePicker"},{"text":" can show date picker only, time picker only, or both.","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"You can instruct the "},{"type":"codeVoice","code":"UIDatePicker"},{"type":"text","text":" to style itself for a "},{"type":"codeVoice","code":".compact"},{"type":"text","text":" space, where it will display only a small key color on top of a light platter:"},{"type":"text","text":" "},{"type":"image","identifier":"WWDC20-10205-date_time_picker_compact"},{"type":"text","text":" "},{"type":"text","text":"Tapping on that key would present the date\/time picker in a modal style"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"codeVoice","code":"UIDatePicker"},{"type":"text","text":" also adhere to the system’s accessibility settings"}],"type":"paragraph"}]}]},{"type":"heading","text":"`UIColorPickerViewController`","level":2,"anchor":"UIColorPickerViewController"},{"type":"paragraph","inlineContent":[{"type":"image","identifier":"WWDC20-10205-uicolorpicker"}]},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"You can use "},{"type":"codeVoice","code":"UIColorPickerViewController "},{"type":"text","text":" to pick a color in of 4 different ways:"}]},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Grid"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Spectrum","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Sliders","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Eyedropper from anywhere on the screen","type":"text"}]}]}]}]},{"content":[{"inlineContent":[{"text":"Picked colors are saved for the user to use them across apps","type":"text"}],"type":"paragraph"}]}]},{"type":"heading","text":"Written By","level":2,"anchor":"Written-By"},{"columns":[{"size":1,"content":[{"type":"paragraph","inlineContent":[{